<header class="header" ng-controller="HeaderCtrl as header">
  <div class="header__nav">
    <nav class="navbar navbar-light header__nav__navbar">
      <div class="header__nav__navbar__hamburger">
        <a class="hamburger hamburger--squeeze" ng-class="{Â 'is-active': menu.isVisible() }" ng-click="menu.toggle()">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </a>
      </div>
      <div class="navbar-brand header__nav__navbar__brand">
        <a href="/">jQuest</a>
      </div>

      <div class="nav navbar-nav pull-xs-right">
        <li class="nav-item header__nav__navbar__user" uib-dropdown ng-show="main.user">
          <a href uib-dropdown-toggle>
            <img src="//www.gravatar.com/avatar/{{ main.user.email_md5 }}?d=retro" class="img-circle header__nav__navbar__user__avatar" />
          </a>
          <div class="dropdown-menu dropdown-menu-right" uib-dropdown-menu>
            <h6 class="dropdown-header">
              <span ng-bind-html="'header.nav.user-display' | translate: main.user"></span>
            </h6>
            <div ng-show="main.user.role === 'admin'">
              <a class="dropdown-item" href="/admin" translate>header.nav.admin</a>
            </div>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/users/sign_out" translate>header.nav.logout</a>
          </div>
        </li>
        <li class="nav-item" ng-hide="main.user">
          <a class="nav-link" href="/users/sign_in" translate>header.nav.login</a>
        </li>
      </div>

      <form class="form-inline nav-item header__nav__navbar__search pull-xs-right hidden-xs-down">
        <div class="form-group">
          <div class="input-group">
            <input class="form-control  header__nav__navbar__search__input" type="search" placeholder="{{ navbar.search | translate }}" id="input-search">
            <label class="input-group-addon header__nav__navbar__search__addon" for="input-search">
              <i class="fa fa-search"></i>
            </label>
          </div>
        </div>
      </form>
    </nav>

    <div class="header__nav__menu" ng-show="menu.isVisible()">
      <div ng-repeat="category in header.menu.getCategories()">
        <h4 class="header__nav__menu__links__heading"  ng-if="category">{{ category }}</h4>
        <ul class="list-inline row header__nav__menu__links">
          <li class="header__nav__menu__links__item col-sm-6 col-md-4 col-lg-3"
              ng-class="{ 'header__nav__menu__links__item--active': item.isActive() }"
              ng-repeat="item in ::header.menu.getItems(category)">
            <a class="card card-block" ng-href="{{ :: item.getHref() }}">
              {{ item.name | translate }}
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="header__activity" ng-if="main.user && main.season" ng-style="{ background: header.menu.getPrimaryColor() }">
    <div class="header__activity__wrapper row">
      <div class="col-xs-6">
        <span class="header__activity__wrapper__title">
          {{ header.menu.getTitle() }}
        </span>
      </div>
      <div class="col-xs-6 text-xs-right">
        <span ng-bind-html=" 'header.activity.points' | translate:{ points: main.user.points[main.season.id] }"></span>
        <i class="fa fa-trophy"></i>
      </div>
    </div>
  </div>
</header>
