<% content_for :stylesheet_includes do %>
  <%= stylesheet_link_tag 'app', media: 'all' %>
<% end %>

<div class="devise">
  <div class="devise__form">
    <div class="card">
      <h5 class="card-header"><%= t "devise.invitations.new.header" %></h5>
      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
        <div class="card-block">
          <%= devise_error_messages! %>
          <%= f.hidden_field :invitation_token %>

          <% resource.class.invite_key_fields.each do |field| -%>
            <div class="form-group row">
              <label class="col-sm-3 text-sm-right">
                <%= f.label field %>
              </label>
              <div class="col-sm-9">
                <%= f.text_field field %>
              </div>
            </div>
          <% end -%>

          <div class="row">
            <div class="col-sm-5 col-sm-push-7 text-sm-right">
              <%= f.submit t("devise.invitations.new.submit_button"), :class => 'btn btn-primary' %>
            </div>
            <div class="col-sm-7 col-sm-pull-5 small">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if flash[:alert] %>
      <p class="alert-warning alert"><%= flash[:alert] %></p>
    <% end %>
    <% if flash[:notice] %>
      <p class="alert-info alert"><%= flash[:notice] %></p>
    <% end %>
  </div>
</div>
