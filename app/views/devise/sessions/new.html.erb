<% content_for :stylesheet_includes do %>
  <%= stylesheet_link_tag 'season', media: 'all' %>
<% end %>

<div class="devise">
  <div class="devise__form devise__form--sign-up">

    <% if flash[:alert] %>
      <p class="alert-warning alert"><%= flash[:alert] %></p>
    <% end %>
    <% if flash[:notice] %>
      <p class="alert-danger alert"><%= flash[:notice] %></p>
    <% end %>

    <div class="card">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: '') do |f| %>
        <h5 class="card-header">jQuest login</h5>
        <div class="card-block">
          <div class="form-group row">
            <label class="col-sm-3 text-sm-right">
              <%= f.label :email %>
            </label>
            <div class="col-sm-9">
              <%= f.email_field :email, class: 'form-control', autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-3 text-sm-right">
              <%= f.label :password %>
            </label>
            <div class="col-sm-9">
              <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group row small">
              <label class="col-sm-9 col-sm-offset-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            </div>
          <% end %>
          <div class="row">
            <div class="col-sm-4 col-sm-push-8 text-sm-right">
              <%= f.submit "Login", :class => 'btn btn-primary' %>
            </div>
            <div class="col-sm-8 col-sm-pull-4 small">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
