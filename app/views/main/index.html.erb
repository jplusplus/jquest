<div class="container">
  <br />
  <div class="jumbotron">
    <h1>Hello world!</h1>
  </div>
  <div>
    <% if !current_user %>
      <%= link_to "Login", main_app.new_user_session_path %>
    <% end %>

    <% if current_user %>
      <p>
        <% if !current_user.otp_required_for_login %>
          <%= button_to "Enable 2FA", main_app.users_enable_otp_path, :method => :post, :class => 'btn btn-default' %>
        <% end %>

        <% if current_user.otp_required_for_login %>
          <%= button_to "Disable 2FA", main_app.users_disable_otp_path, :method => :post, :class => 'btn btn-default' %>
        <% end %>
      </p>
      <%= link_to "Log out", main_app.destroy_user_session_path, :method => :get, :class => 'btn btn-danger' %>
    <% end %>
  </div>
</div>
